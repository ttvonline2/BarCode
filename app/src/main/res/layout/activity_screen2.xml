<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen2">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Scan"
        android:layout_below="@+id/tv_itemcode"
        android:id="@+id/bt_scan"
        android:background="@color/colorAccent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text=""
        android:textSize="25dp"
        android:id="@+id/tv_itemcode"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_user"
        android:hint="User 1001"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bt_scan"
        android:id="@+id/tv_data"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        />

    <LinearLayout
    android:id="@+id/layout_step"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:layout_below="@+id/tv_data"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="50dp"
        android:id="@+id/bt_completed"
        />


</LinearLayout>



</RelativeLayout>